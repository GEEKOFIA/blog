---
permalink: "api/v2/categories/"
---
[
    {% for category in site.categories %}
    {% assign bar = category[0] %}
    {
        "category"  : "{{ category[0] }}",
        "posts": [{% for post in site.categories[bar] %}"{{ post.url }}"{% unless forloop.last %},{% endunless %}{% endfor %}]
    }{% unless forloop.last %},{% endunless %}
    {% endfor %}
]